{
    "name": "actions",
    "version": "0.1.1",
    "description": "Toolbox for Github Actions",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "build": "webpack",
        "commit": "git add dist action.yml && git commit -m build",
        "version": "standard-version",
        "push": "git push --follow-tags origin main",
        "release": "gh release create v$npm_package_version",
        "deploy": "npm run test && npm run build && npm run commit && npm run version && npm run push && npm run release"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/masataka/actions.git"
    },
    "keywords": [
        "github",
        "actions"
    ],
    "author": "@masataka",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/masataka/actions/issues"
    },
    "homepage": "https://github.com/masataka/actions#readme",
    "dependencies": {
        "@actions/core": "^1.8.2",
        "@actions/github": "^5.0.3",
        "@slack/web-api": "^6.7.1",
        "jsx-slack": "^4.6.1"
    },
    "devDependencies": {
        "@octokit/webhooks-definitions": "^3.67.3",
        "@types/jest": "^27.5.1",
        "gh": "^2.8.9",
        "standard-version": "^9.5.0",
        "ts-jest": "^28.0.2",
        "ts-loader": "^9.3.0",
        "typescript": "^4.6.4",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    }
}
