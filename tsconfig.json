{
    "compilerOptions": {
        "lib": ["ES2021"],
        "target": "ES2021",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "sourceMap": false,
        "jsx": "react-jsx",
        "jsxImportSource": "jsx-slack"
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}
